<div class="note_container">
  <h2>Local Inventory</h2>
</div>

<div class="home_table">
<table style="table-layout:fixed; width:100%">
  <thead>
  <tr>
    <th>Precious things: </th>
    <th>Which source it came from: </th>
  </tr>
  </thead>

  <tbody>
  <% @precious.each do |thing| %>
  <tr>
    <td><a href="/a-local-shop/<%= thing['id'] %>"><%= thing['precious_thing_name'] %></td>
    <td> <%= thing['source_name'] %> </td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>
