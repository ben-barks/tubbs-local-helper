<form method="post" action="/a-local-shop/<%= @all_precious_things.id %>">
  <label for="name-field">Name: </label>
  <input
  type="text"
  name="name"
  id="name-field"
  value="<%= @all_precious_things.name %>"
  />

  <label for="description-field">Description: </label>
  <input
  type="text"
  name="description"
  id="description-field"
  value="<%= @all_precious_things.description %>"
  />

  <label for="stock-field">Stock: </label>
  <input
  type="number"
  name="stock_quantity"
  id="stock-field"
  value="<%= @all_precious_things.stock_quantity() %>"
  />

  <label for="cost-field">Buying cost: </label>
  <input
  type="number"
  name="buying_cost"
  id="cost-field"
  value="<%= @all_precious_things.buying_cost() %>"
  />

  <label for="price-field">Selling price: </label>
  <input
  type="number"
  name="selling_price"
  id="price-field"
  value="<%= @all_precious_things.selling_price() %>"
  />

  <label for="source-selection">Source:</label>
  <select name="source" id="source-selection">
  <option
  value="<%= @all_precious_things.source_id %>"
  <%= "selected" if @all_precious_things.source_id == 1 %>
  >Non-local corpse</option>
  <option
  value="<%= @all_precious_things.source_id %>"
  <%= "selected" if @all_precious_things.source_id == 2 %>
  >The attic</option>
  <option
  value="<%= @all_precious_things.source_id %>"
  <%= "selected" if @all_precious_things.source_id == 3 %>
  >Royston Vasey new road dig site</option>
</select>


  <input type='submit' value="Change this precious">
</form>
