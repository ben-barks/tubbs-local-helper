<div class="source_index_wrapper">
<table class="source_index" style="table-layout:fixed; width:100%">
  <tr>
    <th>Sources: </th>
    <th>Description: </th>
  </tr>
</table>

<div id="sources-wrapper">
  <% @all_sources.each do |source| %>
<table style="text-align: center; table-layout: fixed; width:100%">
  <tr>
    <td><a href="/sources/<%=source.id%>"><%=source.name%></td>
    <td><%= source.description %></td>
  </tr>
</table>
  <% end %>
</div>
</div>
